{
  "name": "bootstrap-npm-starter",
  "version": "1.4.0",
  "private": true,
  "description": "Demo project for building a Bootstrap powered site via npm.",
  "author": "mdo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twbs/bootstrap-npm-starter.git"
  },
  "bugs": {
    "url": "https://github.com/twbs/bootstrap-npm-starter/issues"
  },
  "homepage": "https://github.com/twbs/bootstrap-npm-starter#readme",
  "scripts": {
    "build-css": "npm-run-all css-compile css-prefix minify-css",
    "minify-css": "cleancss --batch --batch-suffix '.min' assets/css/*.css --source-map",
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css --load-path=node_modules scss/:assets/css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace assets/css/totalenergies-design-system.css --use autoprefixer --map",
    "server": "browser-sync start --server --files 'assets/**' 'docs/**'",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run build-css\"",
    "test": "npm run css-lint && npm run build-css",
    "release": "standard-version"
  },
  "keywords": [
    "bootstrap",
    "sass",
    "css",
    "javascript",
    "starter",
    "template",
    "design-system"
  ],
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "bootstrap": "^5.0.0",
    "bootstrap-icons": "^1.4.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "clean-css": "^5.1.3",
    "clean-css-cli": "^5.3.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "purgecss": "^4.0.2",
    "rtlcss": "^3.1.2",
    "sass": "^1.32.12",
    "standard-version": "^9.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-twbs-bootstrap": "^2.2.0"
  }
}
